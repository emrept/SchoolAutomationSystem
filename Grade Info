    private void BilgileriKaydetButonuActionPerformed(java.awt.event.ActionEvent evt) {                                                      

        String aDersi=aDersiAlani.getText();
        int bNu=Integer.parseInt(bNuAlani.getText());
        int vize=Integer.parseInt(bVizeAlani.getText());
        int finall=Integer.parseInt(bFinalAlani.getText());
        int kanaat=Integer.parseInt(bKanaatAlani.getText());
        int devamsizlik=Integer.parseInt(bDevamsizlikAlani.getText());
        String errorMessage=null;
        String message=null;
        
        String sorgu="UPDATE DERS SET BVIZE=?, BFINAL=?, BKANAAT=?, BDEVAMSIZLIK=? WHERE ADERSI=? AND BNU=?";
          
        try{
            ps=con.prepareStatement(sorgu);
            ps.setInt(1, vize);
            ps.setInt(2, finall);
            ps.setInt(3, kanaat );
            ps.setInt(4, devamsizlik);
            
            ps.setString(5, aDersi);
            ps.setInt(6, bNu);
      
            ps.executeUpdate();
            
        }catch(SQLException e)
        {
            System.out.println("HATA!!!!!");
            errorMessage=e.getMessage();
        }finally{
            System.out.println(errorMessage);
        }
        
            message="KAYIT BAŞARILI";
            JOptionPane.showMessageDialog(rootPane, message);
        
        // TODO add your handling code here:
    }                                                     

