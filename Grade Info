    private void EkleButonuActionPerformed(java.awt.event.ActionEvent evt) {                                           
        String aDersi=aDersiAlani.getText();
        int bNu=Integer.parseInt(bNuAlani.getText());
        
        String harfKarsiligi=bHarfAlani.getText();
        String sonuc=bSonucAlani.getText();
        String eMessage1=null;
        String message1=null;
        
        
        String sorgu="UPDATE DERS SET BHARF=?, BSONUC=? WHERE ADERSI=? AND BNU=?";
        
         try{
            ps=con.prepareStatement(sorgu);
            ps.setString(1, harfKarsiligi);
            ps.setString(2, sonuc);
            ps.setString(3, aDersi);
            ps.setInt(4, bNu);
            
            ps.executeUpdate();
            
        }catch(SQLException e)
        {
            System.out.println("HATA!!!!!");
            eMessage1=e.getMessage();
        }finally{
            System.out.println(eMessage1);
        }
        
          message1="KAYIT EKLENDİ";  
          JOptionPane.showMessageDialog(rootPane, message1);
          
        aDersiAlani.setText("");
        bNuAlani.setText("");
        bAdiAlani.setText("");
        bSoyadiAlani.setText("");
        bSinifiAlani.setText("");
        bVizeAlani.setText("");
        bFinalAlani.setText("");
        bKanaatAlani.setText("");
        bDevamsizlikAlani.setText("");
        OrtalamaAlani.setText("");
        bHarfAlani.setText("");
        bSonucAlani.setText("");
        
        
        // TODO add your handling code here:
    }                                          

