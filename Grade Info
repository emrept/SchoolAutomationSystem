    private void SonucGosterButonuActionPerformed(java.awt.event.ActionEvent evt) {                                                  
        String aDersi=aDersiAlani.getText();
        int bNu=Integer.parseInt(bNuAlani.getText());
        
        int vize=Integer.parseInt(bVizeAlani.getText());
        int finall=Integer.parseInt(bFinalAlani.getText());
        int kanaat=Integer.parseInt(bKanaatAlani.getText());
        int devamsizlik=Integer.parseInt(bDevamsizlikAlani.getText());
        int ortalama;
        String stOrt;
        String harfKarsiligi=null;
        String sonuc=null;
        String eMessage1=null;
        String message1=null;
        
        ortalama=(int)(0.3*vize)+(int)(0.5*finall)+(int)(0.2*kanaat);
        stOrt=String.valueOf(ortalama);
       
        
        if((100>=ortalama)&&(ortalama>85)&&(10>devamsizlik)&&(devamsizlik>0))
        {
            harfKarsiligi="AA";
            sonuc="GEÇTİ";
        }
        
        else if((85>=ortalama)&&(ortalama>70)&&(10>devamsizlik)&&(devamsizlik>0))
        {
            harfKarsiligi="BB";
            sonuc="GEÇTİ";
        }
        
        else if((70>=ortalama)&&(ortalama>60)&&(10>devamsizlik)&&(devamsizlik>0))
        {
            harfKarsiligi="CC";
            sonuc="GEÇTİ";
        }
        
         else if((60>=ortalama)&&(ortalama>=50)&&(10>devamsizlik)&&(devamsizlik>0))
        {
            harfKarsiligi="DD";
            sonuc="GEÇTİ";
        }
        
        else
         {
            harfKarsiligi="FF";
            sonuc="KALDI";
         }
        
        
        OrtalamaAlani.setText(stOrt);
        bHarfAlani.setText(harfKarsiligi);
        bSonucAlani.setText(sonuc);
         
        
          if ((vize>100)||(finall>100)||(kanaat>100))
          {
              message1="NOTLAR 0 İLE 100 ARASINDA OLMALI.";
              JOptionPane.showMessageDialog(rootPane, message1);
              bVizeAlani.setText("");
              bFinalAlani.setText("");
              bKanaatAlani.setText("");
              bDevamsizlikAlani.setText("");
              OrtalamaAlani.setText("");
              bHarfAlani.setText("");
              bSonucAlani.setText("");
          }
          else  
          {
              message1="NOT ARALIGI GEÇERLİ";
              JOptionPane.showMessageDialog(rootPane, message1);
          }
            
          
        
        // TODO add your handling code here:
    }                                                 

