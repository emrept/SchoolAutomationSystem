    private void EkleButonuActionPerformed(java.awt.event.ActionEvent evt) {                                           
        
        int aSicilNu=Integer.parseInt(aSicilNuAlani.getText());
        String aAdi=aAdiAlani.getText();
        String aSoyadi=aSoyadiAlani.getText();
        String Dersi=DersiAlani.getSelectedItem().toString();
        String aTelNu=aTelNuAlani.getText();
        String aPosta=aPostaAlani.getText();
        String errorMessage=null;
        String message=null;
        
        String sorgu="INSERT INTO OGRETMEN (ASICILNU, AADI, ASOYADI, ADERSI, ATELNU, APOSTA)" + "VALUES(?,?,?,?,?,?)";
        
        try{
        
            preparedStatement=con.prepareStatement(sorgu);
        
            preparedStatement.setInt(1, aSicilNu);
            preparedStatement.setString(2, aAdi);
            preparedStatement.setString(3, aSoyadi);
            preparedStatement.setString(4, Dersi);
            preparedStatement.setString(5, aTelNu);
            preparedStatement.setString(6, aPosta);
            
            preparedStatement.executeUpdate();
            
        }catch(SQLException e)
        {
            System.out.println("HATA!!!!!");
            errorMessage=e.getMessage();
        }finally{
            System.out.println(errorMessage);
        }
        
            message="KAYIT BAŞARILI";
            JOptionPane.showMessageDialog(rootPane, message);
            
            aSicilNuAlani.setText("");
            aAdiAlani.setText("");
            aSoyadiAlani.setText("");
            aTelNuAlani.setText("");
            aPostaAlani.setText("");
          
       // TODO add your handling code here:
    }                                          

