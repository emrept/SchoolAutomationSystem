    private void EkleButonuActionPerformed(java.awt.event.ActionEvent evt) {                                           
        int bNu=Integer.parseInt(bNuAlani.getText());
        String bAdi=bAdiAlani.getText();
        String bSoyadi=bSoyadiAlani.getText();
        String bSinifi=bSinifiAlani.getSelectedItem().toString();
        String bVeliAdi=bVeliAdiAlani.getText();
        String bVeliSoyadi=bVeliSoyadiAlani.getText();
        String bTelNu=bVeliTelAlani.getText();
        String errorMessage=null;
        String message=null;
        
        String sorgu="INSERT INTO OGRENCI (BNU, BADI, BSOYADI, BSINIFI, BVELIADI, BVELISOYADI, BVELITEL)" + "VALUES(?,?,?,?,?,?,?)";
        
        try{
        
            preparedStatement=con.prepareStatement(sorgu);
        
            preparedStatement.setInt(1, bNu);
            preparedStatement.setString(2, bAdi);
            preparedStatement.setString(3, bSoyadi);
            preparedStatement.setString(4, bSinifi);
            preparedStatement.setString(5, bVeliAdi);
            preparedStatement.setString(6, bVeliSoyadi);
            preparedStatement.setString(7, bTelNu);
            
            preparedStatement.executeUpdate();
            
        }catch(SQLException e)
        {
            System.out.println("HATA!!!!!");
            errorMessage=e.getMessage();
        }finally{
            System.out.println(errorMessage);
        }
        
        message="KAYIT BAŞARILI";
        JOptionPane.showMessageDialog(rootPane, message);
        
        bNuAlani.setText("");
        bAdiAlani.setText("");
        bSoyadiAlani.setText("");
        bVeliAdiAlani.setText("");
        bVeliSoyadiAlani.setText("");
        bVeliTelAlani.setText("");
        /*buradan*/ /**/
        // TODO add your handling code here:
    }                                          

