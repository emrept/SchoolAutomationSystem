    private void GoruntuleButonuActionPerformed(java.awt.event.ActionEvent evt) {                                                
      int bNu=Integer.parseInt(bNuAlani.getText());
      
      try {
          String sql = "SELECT ADERSI, BVIZE, BFINAL, BKANAAT, BDEVAMSIZLIK, BHARF, BSONUC FROM DERS WHERE BNU=?";
          ps=con.prepareStatement(sql);
          ps.setInt(1, bNu);
          rs=ps.executeQuery();
          
          TableModel model=new DefaultTableModel();
          jTable1.setModel(DbUtils.resultSetToTableModel(rs));
         
        }catch(SQLException e)
        {
        e.printStackTrace();
        }
        
        // TODO add your handling code here:
    }                                               

    private void AnaSayfaButonuActionPerformed(java.awt.event.ActionEvent evt) {                                               
        dispose();
        NewJFrame2 frame2=new NewJFrame2();
        frame2.setVisible(true);// TODO add your handling code here:
    }                                              

