    private void GirisYapButonuActionPerformed(java.awt.event.ActionEvent evt) {                                               
        String KullaniciAdi = KullaniciAdiAlani.getText();
        String Parola=new String(ParolaAlani.getPassword());
        String message;// TODO add your handling code here:
        
        if (KullaniciAdi.equals("admin") && Parola.equals("123456"))
        {
            dispose();
            NewJFrame2 frame2=new NewJFrame2();
            frame2.setVisible(true);
        }
        
        else if (!KullaniciAdi.equals("admin") && Parola.equals("123456"))
        {
            message="Kullanıcı adı hatalı!!!\nYeniden deneyiniz.";
            JOptionPane.showMessageDialog(rootPane, message);
        }
        
        else if (KullaniciAdi.equals("admin")&& !Parola.equals("123456"))
        {
            message="Parola hatalı!!!\nYeniden deneyiniz.";
            JOptionPane.showMessageDialog(rootPane, message);
        }
        
        else
        {
            message="Kullanıcı adı ve parola hatalı!!!\nYeniden deneyiniz.";
            JOptionPane.showMessageDialog(rootPane, message);
        }
        
        
    }                                              

